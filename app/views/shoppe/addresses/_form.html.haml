= form_for @address, url: [@customer, @address] do |f|
  = f.error_messages

  = field_set_tag "Address Information" do
    .splitContainer
      %dl.half
        %dt= f.label :address_type
        %dd= f.select :address_type, Shoppe::Address::TYPES
      %dl.half
        %dt= f.label :address1
        %dd= f.text_field :address1, :class => "text"
    .splitContainer
      %dl.half
        %dt= f.label :address2
        %dd= f.text_field :address2, :class => "text"
      %dl.half
        %dt= f.label :address3
        %dd= f.text_field :address3, :class => "text"
    .splitContainer
      %dl.half
        %dt= f.label :address4
        %dd= f.text_field :address4, :class => "text"
      %dl.half
        %dt= f.label :postcode
        %dd= f.text_field :postcode, :class => "text"
    .splitContainer
      %dl.half
        %dt= f.label :country_id
        %dd= f.collection_select :country_id, Shoppe::Country.ordered, :id, :name, {:include_blank => true}, {:data => {:placeholder => t('shoppe.orders.select_country')}}

  %p.submit
    - unless @address.new_record?
      %span.right= link_to "Delete", [@customer, @address], :class => 'button purple', :method => :delete, :data => {:confirm => "Are you sure you wish to remove this product?"}
    = f.submit :class => 'button green', data: {disable_with: (@address.new_record? ? "Creating Address..." : "Updating Address...")}
    = link_to "Cancel", :customers, :class => 'button'
